# Open Work - Evidence-First Medical Research Platform
# Environment Template - COPY THIS TO .env.local AND FILL IN THE KEYS

# =============================================================================
# GOOGLE CLOUD CONFIGURATION
# =============================================================================
GOOGLE_CLOUD_PROJECT_ID=your-project-id
GOOGLE_CLOUD_REGION=us-central1

# Google Cloud Storage
GOOGLE_CLOUD_STORAGE_BUCKET=your-bucket-name
GOOGLE_CLOUD_STORAGE_BUCKET_REGION=us-central1

# Google Cloud Firestore
FIRESTORE_DATABASE_ID=(default)
FIRESTORE_COLLECTION_GUIDELINES=indian_treatment_guidelines
FIRESTORE_COLLECTION_GUIDELINE_CHUNKS=guideline_chunks

# =============================================================================
# GEMINI MODEL CONFIGURATION (STRICT - ONLY 3.0 MODELS)
# =============================================================================

# Primary Gemini API Key
GEMINI_API_KEY=YOUR_GEMINI_API_KEY_1

# Additional API Keys (for load distribution)
GEMINI_API_KEY_2=YOUR_GEMINI_API_KEY_2
GEMINI_API_KEY_3=YOUR_GEMINI_API_KEY_3

# Model Names
GEMINI_FLASH_MODEL=gemini-3-flash-preview
GEMINI_PRO_MODEL=gemini-3-pro-preview
GEMINI_EMBEDDING_MODEL=text-embedding-005

# =============================================================================
# EXTERNAL API CONFIGURATION
# =============================================================================

# NCBI API Key (for PubMed/PMC access)
NCBI_API_KEY=YOUR_NCBI_API_KEY

# Tavily API (for recent web content fallback)
TAVILY_API_KEY=YOUR_TAVILY_API_KEY

# HuggingFace API (for BGE re-ranker model)
HUGGINGFACE_API_KEY=YOUR_HUGGINGFACE_API_KEY

# Arize AI (for observability)
ARIZE_API_KEY=YOUR_ARIZE_API_KEY
ARIZE_SPACE_KEY=YOUR_ARIZE_SPACE_KEY

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
NODE_ENV=development
NEXT_TELEMETRY_DISABLED=1
LOG_LEVEL=INFO

# Gemini Rate Limiting
GEMINI_RATE_LIMIT_PER_SECOND=10
GEMINI_MAX_RETRIES=3
GEMINI_RETRY_DELAY_MS=1000
